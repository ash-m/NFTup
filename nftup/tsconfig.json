{
   "compilerOptions": {
     "noImplicitAny": true,
     "module": "es2015",
     "target": "es5",
     "allowSyntheticDefaultImports": true,
     "typeRoots" : ["node_modules/@types", "assets/types"],
     "strict": true,
     "allowJs": true,
     "noImplicitReturns": true,
     "importHelpers": true,
     "jsx": "preserve",
     "esModuleInterop": true,
     "moduleResolution": "Node",
     "lib": [ "dom", "dom.iterable", "esnext" ],
     "outDir": "./build",
     "downlevelIteration": true,
     "skipLibCheck": true,
     "paths":{
       "@/*":["./assets/*"]
     },
   },
   "include": ["assets"],
   "exclude": ["node_modules", "public"],
}