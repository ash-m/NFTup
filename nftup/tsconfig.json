{
   "compilerOptions": {
     "noImplicitAny": true,
     "module": "es2015",
     "target": "es5",
     "allowSyntheticDefaultImports": true,
     "typeRoots" : ["node_modules/@types", "assets/types"],
     "strict": true,
     "allowJs": true,
     "moduleResolution": "Node",
     "lib": [ "dom", "dom.iterable", "esnext" ],
     "outDir": "./build"
   },
   "include": ["assets"],
   "exclude": ["node_modules", "public", "assets/types"],
}